<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.uniauth">

    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".flash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Authentication"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_authentication"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Password_auth"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_password_auth"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register" />
        <activity android:name=".QRScanner"></activity>
    </application>

</manifest>